extends layout

block content
  h1= title
  
  div
    form(method='POST',action='/feeds/')
      input(type='text', name='url',placeholder='Enter URL to add...')
      button(type='submit') Add

  each feed in feeds
    li
      a(href='/feeds/' + feed.id) #{feed.title}
      | 
      a(href='/feeds/update') update
      form(method='POST',action='/feeds/delete/' + feed.id)
        button(type='submit') delete
